@{
    ViewData["Title"] = "Начало";
}

<div class="text-center">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="card mx-auto my-4 shadow" style="max-width: 600px;">
            <div class="card-body">
                <h2 class="card-title">Добре дошъл, @User.Identity.Name!</h2>
                <p class="card-text">
                    Днес си консумирал/а <strong>@(ViewBag.TotalCaloriesToday ?? 0)</strong> kcal.
                </p>
                <a class="btn btn-primary me-2" asp-controller="Menu" asp-action="AddToMenu">
                    Добави хранене
                </a>
                <a class="btn btn-outline-secondary" asp-controller="Menu" asp-action="MyMenus">
                    Прегледай твоите хранения
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="jumbotron mt-4">
            <h1 class="display-4">Добре дошли в CaloryMonitor!</h1>
            <p class="lead">Проследявайте своя калориен прием и здраве по удобен начин.</p>
            <hr class="my-4" />
            <a class="btn btn-lg btn-outline-secondary me-2" asp-area="Identity" asp-page="/Account/Register">
                Регистрация
            </a>
            <a class="btn btn-lg btn-primary" asp-area="Identity" asp-page="/Account/Login">
                Вход
            </a>
        </div>
    }
</div>
