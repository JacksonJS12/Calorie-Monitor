@using CaloryMonitor.ViewModels
@model List<MenuWithItemsViewModel>

<h2>Вашите хранения по дни</h2>

<div class="mb-3">
    <a class="btn btn-success" asp-controller="Menu" asp-action="AddToMenu">
        ➕ Добави ново хранене
    </a>
</div>

@if (Model.Count == 0)
{
    <p>Нямате добавени менюта.</p>
}
else
{
    foreach (var menu in Model)
    {
        <div class="card my-3">
            <div class="card-header bg-primary text-white">
                Хранене за: @menu.Date.ToShortDateString()
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Храна</th>
                            <th>Грамаж</th>
                            <th>Калории</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in menu.Items)
                        {
                            <tr>
                                <td>@item.FoodName</td>
                                <td>@item.QuantityGrams g</td>
                                <td>@item.Calories.ToString("F1") kcal</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <strong>Общо калории: @menu.Items.Sum(i => i.Calories).ToString("F1") kcal</strong>
            </div>
        </div>
    }
}
