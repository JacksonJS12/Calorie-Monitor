@using CaloryMonitor.ViewModels
@model AddToMenuViewModel

<h2>Добави храна към менюто си за днес</h2>

<form asp-action="AddToMenu" method="post">
    <div class="form-group mb-3">
        <label for="SelectedFoodId">Избери храна</label>
        <select asp-for="SelectedFoodId" class="form-control"
                asp-items="@(new SelectList(Model.AvailableFoods, "Id", "Name"))">
            <option value="">-- Избери храна --</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label for="QuantityGrams">Грамаж</label>
        <input asp-for="QuantityGrams" class="form-control" />
        <span asp-validation-for="QuantityGrams" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="TimeOfTheDay">Секция</label>
        <select asp-for="TimeOfTheDay" class="form-control">
            <option value="">-- Избери секция --</option>
            @foreach (var option in Model.TimeOptions)
            {
                <option value="@option">@option</option>
            }
        </select>
        <span asp-validation-for="TimeOfTheDay" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Добави</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
